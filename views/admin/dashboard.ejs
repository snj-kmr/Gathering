<!doctype html>
<html lang="en" ng-app='mean-blog.admin'>

<head>
    <meta charset="utf-8">
    <title>Admin</title>
    <meta name="description" content="ghost clone javascript blog node.js angular.js">
    <meta name="author" content="Ashutosh Kumar">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!--TEXT ANGULAR-->

    <link rel='stylesheet' href='libs\textAngular/dist/textAngular.css'>

    <!--ENDS-->
    <!-- <link rel='stylesheet' href='/admin/css/main.css'> -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="dist/font-awesome/css/font-awesome.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="dist/css/skins/_all-skins.min.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>

<body class="hold-transition skin-blue sidebar-mini" ng-cloak>
    <page-loader></page-loader>
    <div class="wrapper">
        <!-- <div ng-include='"/admin/templates/nav.html"'></div> -->
        <div ng-include='"/admin/templates/element/header.html"'></div>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>{{currentUser.firstname}} {{currentUser.lastname}}</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>

                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="active treeview" ng-if="currentUser.role == 'admin'">
                        <a href="#" >
                                <i class="fa fa-dashboard"></i> 
                                <span>Users</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                        </a>
                        <ul ng-if="currentUser.role == 'admin'" ng-include='"/admin/templates/element/nav.html"' class="treeview-menu"></ul>
                    </li>
                    <li ng-if="currentUser.role != 'admin'">
                         <a ui-sref="editUser({paraml:currentUser._id})">
                                <i class="fa fa-dashboard"></i> 
                                <span > My Profile </span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                                <i class="fa fa-files-o"></i>
                                <span>Products</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                        <ul ng-include='"/admin/templates/element/nav2.html"' class="treeview-menu"></ul>
                    </li>
                    <li class="treeview" ng-if="currentUser.role == 'admin'">
                        <a href="#">
                                <i class="fa fa-files-o"></i>
                                <span>Categories</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                        <ul ng-include='"/admin/templates/element/categorynav.html"' class="treeview-menu"></ul>
                    </li>
                    <li class="treeview" ng-if="currentUser.role == 'admin'">
                        <a href="#">
                                <i class="fa fa-files-o"></i>
                                <span>Static pages</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                        <ul ng-include='"/admin/templates/element/staticpagenav.html"' class="treeview-menu"></ul>
                    </li>
                    <!--added-->
                    <li class="treeview" ng-if="currentUser.role == 'admin'">
                        <a href="#">
                            <i class="fa fa-files-o"></i>
                            <span>Page Editor</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul ng-include='"/admin/templates/element/nav3.html"' class="treeview-menu"></ul>
                    </li>
                    <li class="treeview" ng-if="currentUser.role == 'admin'">
                        <a href="#">
                            <i class="fa fa-files-o"></i>
                            <span>FAQS</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul ng-include='"/admin/templates/element/nav4.html"' class="treeview-menu"></ul>
                    </li>


                    <!--end-->
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- <div ng-include='"/admin/templates/admin_index.html"'></div>-->
        <div ui-view class='full-height' id='main-content'></div>
        <!-- <div ng-include='"/admin/templates/element/footer.html"'></div> -->
        <div class="control-sidebar-bg"></div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-sanitize.js"></script>
    <script src="https://cdn.rawgit.com/showdownjs/showdown/1.0.2/dist/showdown.min.js"></script>

    <script src='/admin/js/lib/markdown.js'></script>
    <script src='/admin/js/app.js'></script>
    <script src='/admin/js/controllers.js'></script>
    <script src='/common/modules/posts.js'></script>
    <script src='/common/modules/users.js'></script>
    <script src='/common/modules/contacts.js'></script>
    <script src='/common/modules/groups.js'></script>
    <script src='/common/modules/categories.js'></script>
    <script src='/common/modules/subcategories.js'></script>
    <script src='/common/modules/products.js'></script>
    <script src='/common/modules/termsnconditions.js'></script>
    <script src='/common/modules/webPages.js'></script>
    <script src='/common/modules/faqs.js'></script>

    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <!--  <script src="bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
  <script src="bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>-->


    <script src="dist/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="dist/js/adminlte.min.js"></script>

    <link rel="stylesheet" href="https://cdn.rawgit.com/codekraft-studio/angular-page-loader/master/dist/angular-page-loader.css">
    <script type="text/javascript" src="https://cdn.rawgit.com/codekraft-studio/angular-page-loader/master/dist/angular-page-loader.min.js"></script>

    <!--Text angular-->
    <script src='libs\textAngular/dist/textAngular-rangy.min.js'></script>
    <script src='libs\textAngular/dist/textAngular-sanitize.min.js'></script>
    <script src='libs\textAngular/dist/textAngular.min.js'></script>
    <script src="libs/ckeditor/ckeditor.js"></script>
    <!--Text angular-->

    <script type='text/javascript'>
        var currentUser = <%- JSON.stringify(user); %>;
   
        adminApp.run(function ($rootScope) {
            $rootScope.currentUser = currentUser;
            console.log($rootScope.currentUser);
        });
    </script>
</body>

</html>